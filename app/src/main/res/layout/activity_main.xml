<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity.MainActivity"
    android:background="@drawable/background">
    <include
        layout="@layout/toolbar_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/MainActToobar" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/nameText"
        android:layout_below="@+id/MainActToobar"
        android:textSize="50sp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/textBright"
        android:layout_marginTop="65dp" />
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/moje_rosliny"
        android:id="@+id/goToMyPlants"
        android:onClick="goToMyPlantsActivity"
        android:nestedScrollingEnabled="true"
        android:background="#ffffff"
        android:layout_below="@+id/goToMyReminds"
        android:layout_alignLeft="@+id/goToMyReminds"
        android:layout_alignStart="@+id/goToMyReminds"
        android:layout_marginTop="5dp" />


    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="PRZYPOMNIENIA"
        android:id="@+id/goToMyReminds"
        android:onClick="goToMyRemindsActivity"
        android:nestedScrollingEnabled="true"
        android:background="#ffffff"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp" />
    <View style="@style/Divider"
        android:layout_below="@+id/nameText"
        android:layout_marginLeft="5dp"
        android:layout_width="300dp" />
</RelativeLayout>
