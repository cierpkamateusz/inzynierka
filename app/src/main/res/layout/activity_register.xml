<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.mateusz.plant.activities.RegisterActivity.RegisterActivity"
    android:background="@drawable/background"
    android:clickable="true"
    android:focusableInTouchMode="true">
    <include
        layout="@layout/toolbar_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LoginToolbar" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/LoginToolbar"
        android:text="@string/registering"
        android:layout_marginTop="65dp"
        android:id="@+id/registerLabel"
        android:textSize="50sp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/textBright" />
    <View style="@style/Divider"
        android:layout_below="@id/registerLabel"
        android:layout_marginLeft="5dp"
        android:layout_width="300dp"
        android:id="@+id/view2" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/nameText"
        android:layout_below="@id/view2"
        android:hint="@string/your_name"
        android:background="#ffffff"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:paddingLeft="10dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/emailText"
        android:layout_below="@+id/nameText"
        android:hint="@string/email"
        android:background="#ffffff"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:paddingLeft="10dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passwordText"
        android:layout_below="@+id/emailText"

        android:hint="@string/password"
        android:background="#ffffff"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:paddingLeft="10dp"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="ZAREJESTRUJ"
        android:id="@+id/RegisterButton"
        android:layout_below="@+id/passwordText"
        android:layout_centerHorizontal="true"
        android:onClick="onClickRegister"
        android:background="#ffffff"
        android:layout_marginTop="10dp" />
</RelativeLayout>
