<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_4"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginBottom="2dp"
    android:layout_marginTop="2dp"
    android:background="@color/abc_search_url_text_normal"
    android:alpha="0.9"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:focusable="true"
        android:clickable="true"
        android:background="@drawable/bright_grey_gradient"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:transitionGroup="false"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/nazwaRosliny"
            android:textColor="@color/primaryDarkGray"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_above="@+id/nazwaLacinska"
            android:layout_alignLeft="@+id/nazwaLacinska"
            android:layout_marginBottom="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/nazwaLacinska"
            android:textStyle="italic"
            android:textColor="@color/primaryDarkGray"
            android:textSize="12dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/ImageView"
            android:layout_toEndOf="@+id/ImageView"
            android:layout_margin="5dp" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/ImageView"
            android:scaleType="centerCrop"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/location"

            android:textColor="@color/primaryDarkGray"
            android:textSize="12dp"
            android:layout_below="@+id/nazwaLacinska"
            android:layout_alignLeft="@+id/nazwaLacinska"
            android:layout_marginTop="2dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageDone"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_done_black_24dp"

            android:visibility="gone" />

    </RelativeLayout>
</android.support.v7.widget.CardView>